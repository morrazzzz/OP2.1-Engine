blowout_sound		= anomaly\monolith_idle

ignore_nonalive		= true;
ignore_small		= true;
ignore_artefacts	= true

blowout_light		= off
idle_light			= off

awaking_time		= 1
blowout_time		= 9000	
accamulate_time		= 1

visible_by_detector = on

blowout_wind		= off

