[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
tip_open = tip_door_coded
snd_open_start = trader_door_locked
on_info = {+fli_have_3} ph_door@close %=play_snd(device\door_servomotor)%

[ph_door@close]
locked = false
closed = true
on_use = ph_door@open
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
locked = false
closed = false
on_use = ph_door@close
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
