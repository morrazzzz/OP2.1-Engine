[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
show_tips = false
snd_open_start = trader_door_locked
on_info = {+spawn_bunker_jupiter} ph_door@close

[ph_door@close]
locked = false
closed = true
show_tips = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_actor_dist_le_nvis = 2.5 | ph_door@open

[ph_door@open]
locked = false
closed = false
show_tips = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_actor_dist_ge_nvis = 2.5 | ph_door@close
