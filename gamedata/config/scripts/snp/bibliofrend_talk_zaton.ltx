victim_wpn = 3|actor
use = true
use_wpn = true
meet_talk_enabled = true
precond = visibility

[danger_ignore]
ignore_distance = 0

[combat_ignore]
combat_ignore_cond = always

[death]
on_info = {=killed_by_actor} %=snp.actor_shoot_bibliofrend%

[hit]
on_info = {=hit_by_actor} %=snp.actor_shoot_bibliofrend%
