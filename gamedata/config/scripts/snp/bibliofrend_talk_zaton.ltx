[smart_terrains]
none = true

[logic]
active = walker@prime
trade = trade\prime.ltx
inv_max_weight = 10000
danger = danger_ignore 
combat_ignore = combat_ignore
on_death = death
on_hit = hit

[walker@prime]
path_look = bibliofrend_zaton_look
path_walk = bibliofrend_talk_zaton_walk
def_state_standing = wait_trade
def_state_moving1 = walk_trade
def_state_moving2 = walk_trade
def_state_moving3 = walk_trade
meet = meet
danger = danger_ignore
combat_ignore_cond = always

[meet]
meet_state = 3| {+npc_greet} wait_trade, wait_trade@ {+npc_greet} talk_bye %-npc_greet% |2| {-npc_greet} wait_trade, wait_trade@ {-npc_greet} talk_hello %+npc_greet%
