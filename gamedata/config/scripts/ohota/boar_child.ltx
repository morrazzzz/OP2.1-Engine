[smart_terrains]
none = true
 
[logic]
active = mob_home1
on_death = mob_death
 
[mob_home1]
path_home = crest_boar_child_home1
home_min_radius = 8
home_max_radius = 10
on_info = {+krest_boar_find} mob_walker
on_use = {-krest_boar_find} %=akill.krest_boar_find%
 
[mob_walker]
path_walk = crest_boar_child_walk
actor_friendly = true
on_actor_dist_ge_nvis = 15 | mob_home2 %+krest_boar_fail%
on_signal = arrived | mob_home2 %+krest_boar_have%
 
[mob_home2]
path_home = crest_boar_child_home2
home_min_radius = 8
home_max_radius = 10
 
[mob_death]
on_info = %+krest_boar_fail%