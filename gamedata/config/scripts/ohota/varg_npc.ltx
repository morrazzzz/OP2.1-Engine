[smart_terrains]
none = true

[logic]
active = walker@varg
combat_ignore = combat_ignore
on_death = mob_death

[danger_ignore]
ignore_distance = 0

[combat_ignore]
combat_ignore_cond = always

[walker@varg]
path_walk = agr_varg_walk
path_look = agr_varg_look
def_state_standing = binocular
danger = danger_ignore
combat_ignore_cond = always
on_info = {+varg_support_start} walker@varg1

[walker@varg1]
path_walk = agr_varg_walk
path_look = agr_varg_look
def_state_standing = hide
meet = no_meet
danger = danger_ignore
combat_ignore_cond = always
on_info = {+varg_support_spawn} walker@varg_between

[walker@varg_between]
path_walk = agr_varg_walk2
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
meet = no_meet
danger = danger_ignore
combat_ignore_cond = always
on_signal = arrived | walker@varg2

[walker@varg2]
path_walk = agr_varg_walk2
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
meet = no_meet
danger = danger_ignore
combat_ignore_cond = always
on_signal = arrived | nil %+varg_support_have%

[mob_death]
on_info = %+varg_support_fail%
