[logic]
active = ph_door@close

[ph_door@close]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open
hit_on_bone = 1|ph_door@free|2|ph_door@free
on_info = {+doki_dimak_done} ph_door@close2

[ph_door@open]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@close
hit_on_bone = 1|ph_door@free|2|ph_door@free
on_info = {+doki_dimak_done} ph_door@close2

[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open
on_info = {+doki_dimak_done} ph_door@close2

[ph_door@close2]
locked = false
closed = true
show_tips = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_actor_dist_le_nvis = 2.5 | ph_door@open2

[ph_door@open2]
locked = false
closed = false
show_tips = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_actor_dist_ge_nvis = 2.5 | ph_door@close2
