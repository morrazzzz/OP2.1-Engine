[smart_terrains]
none = true

[logic]
active=sleeper@brat_luis
;danger = danger_ignore@brat_luis
combat_ignore = combat_ignore
on_death = death@brat_luis
on_hit = hit@brat_luis

[sleeper@brat_luis]
path_main = brat_luis_sleep
combat_ignore_cond = always
meet = no_meet
danger = danger_condition@brat_luis
on_actor_dist_le_nvis = 5 | remark@brat_luis

[remark@brat_luis]
anim = guard
target = actor
snd = brat_luis_hello
combat_ignore_cond = always
on_signal = sound_end| remark@brat_luis2
meet = no_meet

[remark@brat_luis2]
anim = guard
target = actor
combat_ignore_cond = always
meet = meet@brat_luis
on_info = {+brat_luis_killself} sleeper@brat_luis2 

[sleeper@brat_luis2]
path_main = brat_luis_sleep
combat_ignore_cond = always
meet = no_meet
danger = danger_condition@brat_luis

[danger_condition@brat_luis]
ignore_distance = 0

[death@brat_luis]
on_info = %+brat_luis_dead%

[hit@brat_luis]
on_info = %+brat_luis_hit%

[meet@brat_luis]
meet_state		= 10|guard@wait
meet_state_wpn	= 10|backoff@threat_weap
victim		= 10|actor
victim_wpn		= 10|actor
use			= true
use_wpn		= false
syndata		= backoff@threat_weap

[combat_ignore]
combat_ignore_cond = always