active = walker
on_death = death@specnaz
on_hit = hit@specnaz
combat_ignore = combat_ignore@brazhnikov
danger = danger_ignore@brazhnikov

[walker]
path_walk = tonnel_brazhnikov_walk
path_look = tonnel_brazhnikov_look
