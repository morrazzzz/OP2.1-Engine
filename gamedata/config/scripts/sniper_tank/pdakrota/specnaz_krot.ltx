ignore_distance_sound = 0
ignore_distance = 0

[meet]
meet_state 		= 10| {+specnaz_not_enemy} wait
meet_state_wpn 	= 10| {+specnaz_not_enemy} wait
meet_talk_enabled = true
victim 		= 10| actor
victim_wpn 		= 10| actor
use = {-vodka_sherstuku =dist_to_actor_le(3)} self, true
use_wpn = {-vodka_sherstuku =dist_to_actor_le(3)} self, true

[meet@brazhnikov]
use = true
use_wpn = false
meet_talk_enabled = true

