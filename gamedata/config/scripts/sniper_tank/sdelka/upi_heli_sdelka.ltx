[logic]
active = heli_move@idle
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} heli_move@fly5 

[death]
on_info = {=killed_by_actor} %+sdelka_heli_dead%

[heli_move@idle]
path_move = upi_heli_sdelka_idle_move
engine_sound = false
mute = true
combat_safe_altitude = 85
invulnerable = true
on_info = {+upi_sdelka_mono} heli_move@fly1

 
[heli_move@fly1]
path_move = upi_heli_sdelka_prilet_move
engine_sound = true
default_velocity = 20
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = true
rocket_delay = 6000
combat_safe_altitude = 120
invulnerable = true
mute = true
on_info = {+upiter_sdelka_proval} heli_move@fly5
on_timer = 18000 | heli_move@fly2


[heli_move@fly2]
path_move = upi_heli_sdelka_predesant_move
engine_sound = true
default_velocity = 17
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
invulnerable = true
mute = true
combat_safe_altitude = 80
on_info = {+upiter_sdelka_proval} heli_move@fly4
on_timer = 6000 | heli_move@fly3

[heli_move@fly3]
path_move = upi_heli_sdelka_desant_move
engine_sound = true
default_velocity = 4
combat_enemy = nil
mute = true
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 65
velocity = 0
invulnerable = true
on_signal = upi_sdelka| %+upi_sdelka_poneslas%
