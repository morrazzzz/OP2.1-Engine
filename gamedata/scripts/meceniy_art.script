function on_actor_update()
	if t_upd > time_global() then return end --самая многоотсекающая проверка

	t_upd = time_global() + t_upd_delta
local outfit = db.actor:item_in_slot(6)
	if not outfit or outfit:section() ~= "exo_mil_exoskeleton_addrs" then
		last_time = nil -- если не сделать, то при взятии в одевании костюма время использования арта-аккумулятора будет считаться с момента его прошлого использования
return
end

exo_update(outfit)
end

function exo_update(item)
	if not has("art_acumm") then
--\\ исправление вылета при отсутствии черной энергии
--		create(item:section(), db.actor:position(), db.actor:level_vertex_id(), db.actor:game_vertex_id(), db.actor:id())
