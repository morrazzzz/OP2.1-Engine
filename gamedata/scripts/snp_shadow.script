-- Обработчик. При каждом вызове увеличивает индекс таблицы. Параметры передавать только для отладки конкретного объекта.
function worker(index)
	local idx = amk.load_variable("snp_shadow", 0)
	if index then
		idx = index
	end
	
	local job = shadows[idx]
	local obj
	
	-- удаляем текущий объект
	if job then
	
		-- удаляем телепорт/ы
		if job.teleport then
			kostya_dialog.delete_teleport(job.teleport.section)
		end
		if job.teleports then
			for i, obj in ipairs(job.teleports) do
				kostya_dialog.delete_teleport(obj.section)
			end
		end

		-- удаляем предыдущую записку
		if job.note then
			amk.remove_item_from_inventory_by_name(job.note, db.actor)
		end

		-- выдаем поршень
		if job.info then
			give_info(job.info)
		end

		-- выполняем функцию
		if job.func then
			loadstring(job.func)()
		end
	end
	
	-- следующий объект
	idx = idx+1
	job = shadows[idx]

	-- создаем следующий объект
	if job then
		amk.save_variable("snp_shadow", idx)
	
		-- телепорт/ы
		obj = job.teleport
		if obj then
			if obj.position == "actor" then
				kostya_dialog.create_teleport(obj.section, db.actor:position(), db.actor:level_vertex_id(), db.actor:game_vertex_id())
			else
				kostya_dialog.create_teleport(obj.section, xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv)
			end
		end
		if job.teleports then
			for i, obj in ipairs(job.teleports) do
				kostya_dialog.create_teleport(obj.section, xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv)
			end
		end

		-- рестриктор
		obj = job.restrictor
		if obj then
			if obj.timer then
				snp.create_restrictor_timer(xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv, obj.radius, obj.timer, "snp_shadow.run_worker")
			elseif obj.timer_pftp then
				snp.create_restrictor_timer_pftp(xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv, obj.radius, obj.timer_pftp, "snp_shadow.run_worker")
			else
				snp.create_restrictor(xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv, obj.radius, "snp_shadow.run_worker")
			end
		end

		-- спаун
		obj = job.spawn
		if obj then
			for section,qty in pairs(obj.items) do
				for i=1,qty do
					create(section, xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv)
				end
			end
		end

		-- рюкзак
		obj = job.rukzak
		if obj then
			create(obj.section, xyz(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv)
		end

		-- сообщение
		obj = job.tip
		if obj then
			sms(obj, 2, nil, 30000, nil, job.tip_snd)
		end

		-- сообщение ПФТП
		obj = job.sms_pftp
		if obj then
			sms("%c[255,160,160,160]".."ПФТП:".."\\n".."%c[255,255,128,128]"..obj, nil, "nano", 50000, nil, job.sms_pftp_snd)
		end
	else
		-- все, кончилась цепочка
		amk.del_variable("snp_shadow")
	end
end

-- отсечка параметров движка
function run_worker()
	worker()
end
