function spawn_npc(obj, x, y, z, lv, gv, logic) 
    local se_obj = create(obj,xyz(x,y,z),lv,gv)
	netpacket:modify(se_obj, "custom_data", "[logic]\ncfg = scripts\\volazar\\vol_l\\npc\\"..logic..".ltx")
end
