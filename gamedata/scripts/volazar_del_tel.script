-- собственно удаление
function del_tel(tels)
    for _, teleport_name in pairs (tels) do
		local se_obj = server_object(xr_logic.pstor_retrieve(db.actor, teleport_name, -1, true))
		if se_obj then
			release(se_obj, true)
		end
	end
end
