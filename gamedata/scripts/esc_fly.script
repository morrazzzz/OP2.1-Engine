-- проваливание задания при сейве и при посадке
function sidor_delo_fail()
    if has_info("sidor_delo_start") and
	   not has_info("sidor_delo_have") and
	   level.name() == "l01_escape"
	then
		give_info("sidor_delo_fail")
		lost("anom_egg",1)
		lost("wpn_rg-6",1)
		lost_all("ammo_vog-25_fly")
		nano_suit_moduls.sidor_stop()
		fly.stop()
	end
end
